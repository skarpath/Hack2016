<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stephenk.majorready.Level1Q3Activity"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3   How would you get the recessive allele in your population?"
        android:id="@+id/Lvl1Q3prompttxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/Lvl1q3spinner"
        android:layout_below="@+id/Lvl1Q3prompttxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/spinnerborder" />

    <Button
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Next"
        android:id="@+id/lvl1q3nextbtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:onClick="Lvl1Q3nextBtn"
        android:clickable="true"
        android:background="@drawable/spinnerborder"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
