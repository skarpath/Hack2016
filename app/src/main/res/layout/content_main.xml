<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"

    tools:showIn="@layout/activity_main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major\nReady!?"
        android:id="@+id/maMajorReadytxt"
        android:layout_alignParentTop="true"
        android:textSize="60dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignEnd="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:background="#e0e0e0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TitleBiology"
        android:id="@+id/maLvl1btn"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:ellipsize="middle"
        android:paddingBottom="10dp"
        android:background="#3efa51"
        android:textColor="#000000"
        android:layout_alignEnd="@+id/maLvl2btn"
        android:layout_alignStart="@+id/maLvl2btn"
        android:alpha="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TitlePsychology"
        android:id="@+id/maLvl2btn"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#fa7035"
        android:paddingTop="10dp"
        android:layout_below="@+id/maLvl1btn"
        android:layout_alignEnd="@+id/textView26"
        android:layout_alignStart="@+id/textView26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select your major :"
        android:id="@+id/textView26"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/maMajorReadytxt"
        android:layout_centerHorizontal="true"
        android:gravity="fill_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnBusiness"
        android:id="@+id/button2"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#6eb7ff"
        android:paddingTop="10dp"
        android:layout_below="@+id/maLvl2btn"
        android:layout_alignEnd="@+id/maLvl1btn"
        android:layout_alignStart="@+id/maLvl2btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnHealth"
        android:id="@+id/button3"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#ff1e1e"
        android:paddingTop="10dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/maLvl2btn"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
